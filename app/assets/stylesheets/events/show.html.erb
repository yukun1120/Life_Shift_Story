<div class="home">
  
  <%= render "shared/side"%>

  <div class="home-main-ev">

    <%= render "shared/header"%>

    <div class="event-main">
      
      <div class="show">
        <p>
          <strong>タイトル</strong>
          <%= @event.title %>
        </p>

        <p>
          <strong>内容</strong>
          <%= @event.content %>
        </p>

        <p>
          <strong>日時</strong>
          <%= @event.start_time.strftime("%m-%d") %>
        </p>

        <%= link_to '編集', edit_event_path(@event) %>
        <%= link_to '消去',event_path(@event.id), method: :delete, data: { confirm: '本当に?' } %>
        <%= link_to '戻る', events_path %>
      </div>
    </div>

    <%= render "shared/footer"%>

  </div>
</div>