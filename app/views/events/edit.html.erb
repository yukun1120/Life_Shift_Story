<div class="home">
  
  <%= render "shared/side"%>

  <div class="home-main-ev">

    <%= render "shared/header"%>

    <div class="event-main-center">
      <div class="event-main-edit">
        <%= form_with(model: @event, local: true) do |form| %>

          <div class="title">
            <div class="form-tag">タイトル</div>
            <%= form.text_field :title %>
          </div>


          <div class="content">
            <div class="form-tag">内容</div>
            <%= form.text_field :content, class: "content" %>
          </div>

            <div class="time">
            <div class="form-tag">時間</div>
            <%= form.datetime_select :start_time %>
          </div>


          <div class="submit">
            <%= form.submit "保存", class: "submit" %>
          </div>
        <% end %>
      </div>

    </div>

    <%= render "shared/footer"%>

  </div>
</div>