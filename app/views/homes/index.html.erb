<div class="home">
  
  <%= render "shared/side"%>

  <div class="home-main">

    <%= render "shared/header"%>

    <div class="h-m-main">
      <div class="famous-quote">
        <div class="h-m-m-title">
          <%= link_to "名言", famous_quotes_path %>
        </div>
          <div class="h-m-m-content1">
            <% if @famous_quote.present? %>
              <div class='home-famous'>
                <%= @famous_quote.phrase %>
              </div>
            <% else %>
              <div>与えよ、さらば与えられん</div>
            <% end %>
          </div>

      </div>
      <div class="schedule">
        <div class="h-m-m-title">９/２４(火)</div>
        <div class="h-m-m-content2">
          <%#= カレンダーと習慣日程から読み込む%>
          <a href="#">仕事</a>
          <a href="#">ディズニー</a>
        </div>
      </div>
      <div class="checklist">
        <div class="h-m-m-title">チェックリスト</div>
        <div class="h-m-m-content3">

          <div class="checkbox">
            <%= check_box_tag (:id_name) %>
            <%= check_box_tag (:id_name) %>
            <%= check_box_tag (:id_name) %>
            <%= check_box_tag (:id_name) %>
          </div> 

          <div class="content-list">
            <div class="h-m-m-c-lists">価値観</div>
            <div class="h-m-m-c-lists">習慣</div>
            <div class="h-m-m-c-lists">今日良かったこと</div>
            <div class="h-m-m-c-lists">日記</div>
          </div>
        </div>
      </div> 
    </div>

    <%= render "shared/footer"%>
    
  </div>

</div>